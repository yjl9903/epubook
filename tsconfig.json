{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    // "jsx": "preserve",
    // "jsxFactory": "h",
    // "jsxFragmentFactory": "fragment",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "epubook": [
        "./packages/epubook/src/index.ts"
      ],
      "@epubook/xml": [
        "./packages/xml/src/index.ts"
      ],
      "@epubook/core": [
        "./packages/core/src/index.ts"
      ],
      "@epubook/bundler": [
        "./packages/bundler/src/index.ts"
      ],
      "@epubook/theme": [
        "./packages/theme/src/index.ts"
      ]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}