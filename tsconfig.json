{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@epubook/xml",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext"
    ],
    "paths": {
      "epubook": [
        "./packages/epubook/src/index.ts"
      ],
      "@epubook/xml": [
        "./packages/xml/src/index.ts"
      ],
      "@epubook/xml/jsx-runtime": [
        "./packages/xml/src/jsx-runtime.ts"
      ],
      "@epubook/xml/jsx-dev-runtime": [
        "./packages/xml/src/jsx-dev-runtime.ts"
      ],
      "@epubook/core": [
        "./packages/core/src/index.ts"
      ],
      "@epubook/bundler": [
        "./packages/bundler/src/index.ts"
      ],
      "@epubook/theme": [
        "./packages/theme/src/index.ts"
      ]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}